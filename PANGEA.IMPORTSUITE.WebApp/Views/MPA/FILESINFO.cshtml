@using System.Data
<div class="panel panel-white">
    <div class="panel-heading">
        <h5 class="panel-title">Files Information</h5>
        <div class="heading-elements">
            <ul class="icons-list">
                <li><a data-action="reload"></a></li>
            </ul>
        </div>
        <a class="heading-elements-toggle"><i class="icon-menu"></i></a>
    </div>

    <div class="panel-body">
        <div class="row">

            @if (Model.Rows.Count> 0)
            {

                <div class="col-sm-12">

                    <div class="card-box table-responsive">

                        <button type="button" onclick="FILE_NEW('')" class="btn btn-primary">ADD FILE INFORMATION </button>



                        <table id="TblFiles" class="table table-striped table-bordered table-condensed">
                            <thead>
                                <tr>
                                    <th>Source File</th>
                                    <th>Name File</th>
                                    <th>Facility Code</th>
                                    <th>File Type</th>
                                    <th>Merchant Id</th>
                                    <th></th>
                                    @*<th></th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @{ int i = 1; }
                                @foreach (var row in Model.Rows)
                                {
                                    <tr>
                                        <td class="text-bold">@row["sourceFile"]</td>
                                        <td>@row["Name"]</td>
                                        <td>@row["facilityCode"] </td>
                                        <td>@row["filetype"]</td>
                                        <td>@row["merchantId"]</td>
                                        <td>
                                            <a href="javascript:FILE_NEW('@row["id"]')">
                                                <i class="icon-pencil style="font-size:18px;"></i>
                                            </a>
                                        </td>
                                        @*<td>
                                            <a href="javascript:FILE_DELETE('@row["id"]')">
                                                <i class="glyphicon glyphicon-remove" style="font-size:18px;"></i>
                                            </a>
                                        </td>*@
                                    </tr>

                                    i++;
                                }
                            </tbody>

                        </table>

                    </div>



                </div>
                                    }
                                    else
                                    {
                                        <div class="col-sm-12 text-danger">
                                            No record found.
                                        </div>
                                    }
        </div>
    </div>
</div>


<script>


    function FILE_NEW(id) {

        ModalProcesandoShow();

        $("#DivLoadingPage").html('');

        $.ajax({
            type: 'GET',
            url: '/MPA/FILEINFO_NEW',
            data: { id: id }, //params,
            success: function (r) {

                ModalProcesandoHiden();

                $("#DivLoadingPage").html(r);

            },
            error: function (r) {

                ModalProcesandoHiden();
    
                console.log(r);
            }
        });
    }

    function FILE_DELETE(id) {

        if (!confirm("you want to delete the information?"))
            return;

        ModalProcesandoShow();

        $("#DivLoadingPage").html('');

        $.ajax({
            type: 'POST',
            url: '/MPA/FILEINFO_DELETE',
            data: { id: id }, //params,
            success: function (r) {

                ModalProcesandoHiden();

                console.log(r);
                alert('SAVE SUCCESS');
                window.location.href = window.location.href;


            },
            error: function (r) {

                ModalProcesandoHiden();

                console.log(r);
            }
        });
    }

    $(document).ready(function () {


        $('#TblFiles').DataTable({
            "processing": true,
            "paging": true,
            "lengthChange": true,
            "searching": true,
            //"ordering": true,
            "order": [],
            "info": true,
            "autoWidth": true,
            "bDestroy": true,
            aLengthMenu: [
                [10, 50, 100, 150, 250, 350, -1],
                [10, 50, 100, 150, 250, 350, "All"]
            ],
            "iDisplayLength": -1
        });


    });

</script>

